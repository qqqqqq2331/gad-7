    <div class="result" id="result"></div>

    <script>
        function calculateResult() {
            var totalScore = 0;
            for (var i = 1; i <= 7; i++) {
                var q = document.querySelector('input[name="q' + i + '"]:checked');
                if (q) {
                    totalScore += parseInt(q.value);
                }
            }

            var resultText = "총점: " + totalScore + "점<br>";

            if (totalScore >= 0 && totalScore <= 4) {
                resultText += "불안이 거의 없음 (0~4점)";
            } else if (totalScore >= 5 && totalScore <= 9) {
                resultText += "경미한 불안 (5~9점)";
            } else if (totalScore >= 10 && totalScore <= 14) {
                resultText += "중간 정도 불안 (10~14점)";
            } else if (totalScore >= 15) {
                resultText += "심한 불안 (15점 이상)";
            }

            document.getElementById("result").innerHTML = resultText;
        }
    </script>

